<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/guillotine_background"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        style="@style/Toolbar"
        app:contentInsetStart="0dp">

        <ImageView
            android:id="@+id/guillotine_hamburger"
            style="@style/ImageView.Hamburger"
            android:src="@drawable/ic_menu" />
    </android.support.v7.widget.Toolbar>


    <LinearLayout
        android:id="@+id/bio_group"
        style="@style/LinearLayout.GuillotineItem"
        android:layout_marginTop="@dimen/guillotine_medium_margin">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_profile" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/bio" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/portfolio_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/portfolio" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/blog_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_feed" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="@string/blog"
            android:id="@+id/content_button"/>
    </LinearLayout>



    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/guillotine_divider_height" />




    <LinearLayout
        android:id="@+id/contacts_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_settings" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem"
            android:text="@string/contacts" />
    </LinearLayout>



    <LinearLayout
        android:id="@+id/hobbies_group"
        style="@style/LinearLayout.GuillotineItem">

        <ImageView
            style="@style/ImageView.GuillotineItem"
            android:src="@drawable/ic_activity_active" />

        <com.yalantis.guillotine.sample.widget.CanaroTextView
            style="@style/TextView.GuillotineItem.Selected"
            android:text="@string/hobbies"/>
    </LinearLayout>
</LinearLayout>